<body>
    <div class="background"></div>
    <div class="popup-text" id="popup-text">Double tap to turn the page</div>
    <div class="card-container" id="card-container">
        <div class="card" id="card">
            <div class="title">Happy Valentine's Day Ipshita</div>
        </div>
        <div class="message" id="message">
            <div class="title">You are the most special person in my life. Wishing you all the love and happiness today and always! ‚ù§Ô∏è</div>
            <div class="image-below-text-second-page"></div>
        </div>
    </div>
    <div class="kiss-emoji" id="kiss-emoji">üòò</div>
    <audio id="crowd-audio" src="https://www.fesliyanstudios.com/play-mp3/387" preload="auto"></audio>
    
    <script>
        let card = document.getElementById("card");
        let message = document.getElementById("message");
        let cardContainer = document.getElementById("card-container");
        let popupText = document.getElementById("popup-text");
        let kissEmoji = document.getElementById("kiss-emoji");
        let crowdAudio = document.getElementById("crowd-audio");
        let lastTap = 0;

        window.onload = function() {
            popupText.style.opacity = "1";
            popupText.style.visibility = "visible";
            setTimeout(() => {
                popupText.style.opacity = "0";
                popupText.style.visibility = "hidden";
            }, 3000);
        };

        cardContainer.addEventListener("touchend", (event) => {
            let currentTime = new Date().getTime();
            let tapLength = currentTime - lastTap;
            if (tapLength < 300 && tapLength > 0) {
                if (card.classList.contains("open")) {
                    card.classList.remove("open");
                    message.style.transform = "rotateY(180deg)";
                    showKissEmoji();
                } else {
                    card.classList.add("open");
                    message.style.transform = "rotateY(0deg)";
                    crowdAudio.play();
                }
            }
            lastTap = currentTime;
        });

        function showKissEmoji() {
            kissEmoji.style.opacity = "1";
            setTimeout(() => {
                kissEmoji.style.opacity = "0";
            }, 2000);
        }
    </script>
</body>
